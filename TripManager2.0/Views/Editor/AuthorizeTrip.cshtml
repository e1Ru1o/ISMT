@model PendingUserTripViewModel

@{
    Layout = "UserLayout";
    ViewData["Title"] = "Viajes";
}

<body>
    <div class="main">

        <form method="post">
            @Html.Partial("Razon")
            <h1>Viajes actuales</h1>
            <input hidden="hidden" id="trip" name="tripId">
            <input hidden="hidden" id="op" name="action">
            <input hidden="hidden" id="uType" name="uType">
            <table>
                <tr>
                    <th>
                        Usuario
                    </th>
                    <th>
                        Fecha de viaje
                    </th>
                    <th>
                        Estado
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Users)
            {
                    <tr id="@item.ID">
                        <td>
                            @item.Owner
                        </td>
                        <td>
                            @item.Identifier
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            <a href="/Admin/Viaje?id=@item.ID" class="button"><span>Detalles</span></a>
                        </td>
                        <td>
                            <button class="button" type="submit" onclick="setValues(this, '0', '0');"><span>Aprobar</span></button>
                        </td>
                        <td>
                            <button class="button" type="button" onclick="show(this, '0');"><span>Rechazar</span></button>
                        </td>
                        <td>
                            <button class="button" type="submit" onclick="setValues(this, '2', '0');"><span>Cancelar</span></button>
                        </td>
                    </tr>
                }
            </table>

            <br />

            <h1>Invitados</h1>
            <table>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Fecha de viaje
                    </th>
                    <th>
                        Estado
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Visitants)
            {
                    <tr id="@item.ID">
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.End
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            @{
//TODO: [KARL LEWIS] Connect this button with the correct view to see Invitation Details
                            }
                            <a href="/Admin/Viaje?id=@item.ID" class="button"><span>Detalles</span></a>
                        </td>
                        <td>
                            <button class="button" type="submit" onclick="setValues(this, '0', '1');"><span>Aprobar</span></button>
                        </td>
                        <td>
                            <button class="button" type="submit" onclick="setValues(this, '1', '1');"><span>Rechazar</span></button>
                        </td>
                        <td>
                            <button class="button" type="submit" onclick="setValues(this, '2', '1');"><span>Cancelar</span></button>
                        </td>
                    </tr>
                                }
            </table>
        </form>
    </div>
</body>


@section Scripts{ 
    <script>
        function setValues(caller, option, uType) {
            getRowId(caller, 'trip');
            document.getElementById('op').value = option;
            document.getElementById('uType').value = uType;
        }     
        function show(caller, uType) {
            var dialog = document.getElementById("rzn");
            setValues(caller, '1', uType);
            dialog.showModal();
        }
    </script>
}

