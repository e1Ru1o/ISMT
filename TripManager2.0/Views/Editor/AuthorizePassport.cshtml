@using BizData.Entities
@model IEnumerable<Usuario>


<div class="main">
    <h1>Pasaportes Pendientes</h1>
    <input hidden="hidden" id="type" name="action">
    <form method="post">
        <table>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Correo
                </th>
                <th>
                </th>
                <th>
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.FirstName
                    </th>
                    <th>
                        @item.FirstLastName
                    </th>
                    <th>
                        @item.Email
                    </th>
                    <th>
                        <button class="button" type="submit" value="@item.Id" name="usuarioId" onclick="setValues( '0');"><span>Aprobar</span></button>
                    </th>
                    <th>
                        <button class="button" type="submit" value="@item.Id" name="id" onclick="setValues( '1');"><span>Rechazar</span></button>
                    </th>
                    <th>
                        <button class="button" type="submit" value="@item.Id" name="id" onclick="setValues( '2');"><span>Cancelar</span></button>
                    </th>
                </tr>
            }
        </table>

    </form>
</div>
<script>
    function setValues(option) {
        document.getElementById('type').value = option;
    }
</script>