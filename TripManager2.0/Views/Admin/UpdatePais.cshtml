@using BizLogic.Administration
@model PaisCommand
@{
    ViewData["Title"] = "Editar Pais";
    Layout = "UserLayout";
}

<div class="main">
    <form method="post">
        <CENTER>
            <h3>Añadir Pais</h3>
            <div class="col-md-2 col-md-offset-3">
                <div class="form-group">
                    <label>Nombre</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Region</label>
                    <select asp-for="RegionName" class="form-control">
                        @foreach (var item in Model.Regiones)
                        {
                            <option value=@item>@item</option>
                        }
                    </select>
                    <span asp-validation-for="RegionName" class="text-danger"></span>
                </div>
                <input asp-for="Id" style="display:none"/>
                <button class="button"><span>Actualizar</span></button>
            </div>
        </CENTER>
    </form>
</div>