@using BizData.Entities
@using BizLogic.Shared
@model IEnumerable<Pais>

@{
    Layout = "UserLayout";
    ViewData["Title"] = "Pais";
}
<div class="main">
    <h1>Paises</h1>
    <form method="post">
        <table>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Region
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Nombre
                    </td>
                    <td>
                        @item.Region.Nombre
                    </td>
                    <td>
                        <a href="/Admin/UpdatePais?key=@item.PaisID" class="button"> <span>Update </span></a>
                    </td>
                </tr>

            }
            <tr>
                <td>
                    <a href="/Admin/AddPais" class="button"> <span>Agregar </span></a>

                </td>
                <td></td>
                <td></td>
            </tr>
        </table>
    </form>
</div>
