@using BizData.Entities
@using BizLogic.Authentication
@model IEnumerable<Usuario>

@{
    Layout = "UserLayout";
    ViewData["Title"] = "Usuarios";
}

<div class="main">
    <h1>Usuarios</h1>
    <p>
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Buscar por nombre">
    </p>
    <table id="myTable">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Correo
            </th>

            <th>

            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.FirstLastName
                </td>
                <td>
                    @item.UserName
                </td>



                <td>
                    <a class="button" href="/Admin/UpdateUsuario?email=@item.UserName"><span>Editar</span></a>
                </td>
            </tr>
        }
    </table>
</div>