@{
    Layout = "UserLayout";
    ViewData["Title"] = "Nuevo Viaje";
}

<body>
    <CENTER>
        <div class="col-md-4 col-md-offset-3">
            <h1>Datos del Viaje</h1>
            <div>
                <label for="start">fecha de inicio</label>
                <input type="text" id="start" class="form-control">
            </div>
            <div>
                <label for="end">fecha de finalizacion</label>
                <input type="text" id="end" class="form-control">
            </div>
            <div id="destiny">
                <form>
                    <label for="pais">Proximo pais:</label><input id="pais" type="text" size=10 class="form-control">
                    <button type="button" class="button" onClick="add(getElementById('pais').value);"><span>Añadir</span></button>
                </form>
                <p>Ruta del viaje</p>
            </div>
        </div>
    </CENTER>
</body>

<script type="text/javascript">
    function add(pais) {
        var f = document.getElementById("start");
        var destiny = document.getElementById("destiny");
        var h1 = document.createElement("h3");
        h1.innerHTML = pais;
        destiny.appendChild(h1);
    }
</script>