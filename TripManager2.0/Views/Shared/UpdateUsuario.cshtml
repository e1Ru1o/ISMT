@using BizLogic.Authentication
@model RegisterUsuarioCommand
<style>
    .container {
        display: inline;
    }
</style>
<form method="post">
    <CENTER>
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Segundo Nombre(Opcional)</label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Primer Apellido</label>
                <input asp-for="FirstLastName" class="form-control" />
                <span asp-validation-for="FirstLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Segundo Apellido</label>
                <input asp-for="SecondLastName" class="form-control" />
                <span asp-validation-for="SecondLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Nivel de Autorizacion</label>
                <select asp-for="Level" class="form-control">
                    <option value="Common">Normal</option>
                    <option value="Admin">Administrador</option>

                </select>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Passaport</label>
                <div>
                    <label class="container">
                        True
                        <input type="radio" value="True" asp-for="Passaport">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        False
                        <input type="radio" value="False" asp-for="Passaport">
                        <span class="checkmark"></span>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label>Visa</label>
                <div>
                    <label class="container">
                        True
                        <input type="radio" value="True" asp-for="Visa">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        False
                        <input type="radio" value="False" asp-for="Visa">
                        <span class="checkmark"></span>
                    </label>
                </div>

            </div>
            <div class="form-group">
                <label>Institucion</label>
                <div>
                    <label class="container">
                        Trabajador
                        <input type="radio" value="Trabajador" asp-for="Institucion">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        Jefe de area
                        <input type="radio" value="JefeArea" asp-for="Institucion">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        Decano
                        <input type="radio" value="Decano" asp-for="Institucion">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        Rector
                        <input type="radio" value="Rector" asp-for="Institucion">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        None
                        <input type="radio" value="None" asp-for="Institucion">
                        <span class="checkmark"></span>
                    </label>
                </div>
            </div>
            <input asp-for="ConfirmPassword" value="P9n$" hidden="hidden" />
            <input asp-for="Password" value="P9n$" hidden="hidden" />
            <button class="btn" type="submit"> Enviar</button>
        </div>

    </CENTER>
</form>
