@using BizLogic.Authentication
@model RegisterUsuarioCommand
<form method="post">
    <CENTER>
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Segundo Nombre(Opcional)</label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Primer Apellido</label>
                <input asp-for="FirstLastName" class="form-control" />
                <span asp-validation-for="FirstLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Segundo Apellido</label>
                <input asp-for="SecondLastName" class="form-control" />
                <span asp-validation-for="SecondLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Nivel de Autorizacion</label>
                <select asp-for="Level" class="form-control">
                    <option value="Normal">Normal</option>
                    <option value="Editor">Editor</option>
                    <option value="Admin">Administrador</option>
                    
                </select>

                <span asp-validation-for="Level" class="text-danger"></span>
            </div>

            <input asp-for="ConfirmPassword" value="P9n$" hidden="hidden" />
            <button class="btn"> Enviar</button>
        </div>
    </CENTER>
</form>
