@using BizLogic.Administration
@model CiudadCommand
@{
    ViewData["Title"] = "Añadir Ciudad";
}

<form method="post">
    <CENTER>
        <h3>Añadir Ciudad</h3>
        <div class="col-md-2 col-md-offset-3">
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Pais</label>
                <select asp-for="paisName" class="form-control">
                    @foreach (var item in Model.Paises)
                    {
                        <option value=@item>@item</option>
                    }
                </select>
                <span asp-validation-for="paisName" class="text-danger"></span>
            </div>
            <button class="button">Agregar</button>
        </div>
    </CENTER>
</form>
